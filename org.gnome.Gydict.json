{
    "app-id" : "org.gnome.Gydict",
    "runtime" : "org.gnome.Sdk",
    "runtime-version" : "3.30",
    "sdk" : "org.gnome.Sdk",
    "command" : "gydict",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options" : {
        "cflags" : "-O2 -g",
        "cxxflags" : "-O2 -g",
        "env" : {
            "V" : "1"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
         "name" : "libpeas",
            "cleanup" : [
                "/bin/*",
                "/lib/peas-demo",
                "/lib/libpeas-gtk*"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libpeas.git"
                }
            ]
        },
        {
         "name" : "libdazzle",
            "config-opts" : [
                "--libdir=/app/lib",
                "--buildtype=debugoptimized"
            ],
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type"   : "archive",
                    "url"    : "https://gitlab.gnome.org/GNOME/libdazzle/-/archive/libdazzle-3-30/libdazzle-libdazzle-3-30.tar.bz2",
                    "sha256" : "b8b6daa2b00927be2764aa75ec19891d627397db75d825f97413183cd43aaece"
                }
            ]
        },
        {
            "name" : "gydict",
            "buildsystem" : "meson",
            "config-opts" : [
                "--libdir=lib",
                "--buildtype=debug"
            ],
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/jczartek/gydict.git"
                }
            ]
        }
    ]
}
