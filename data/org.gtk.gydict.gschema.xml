<schemalist gettext-domain="gydict">

  <schema id="org.gtk.gydict" path="/org/gtk/gydict/">
    <key name="night-mode" type="b">
      <default>false</default>
      <summary>Night Mode</summary>
      <description>Prefer dark application chrome.</description>
    </key>
  </schema>

  <schema id="org.gtk.gydict.path" path="/org/gtk/gydict/path/">
    <key name="use-system-path" type="b">
      <default>true</default>
      <summary>Use system paths</summary>
      <description>Use the system default paths.</description>
    </key>
    <key name="dict-pwn-angpol" type="s">
      <default>'/opt/gydict/data/angpol.win'</default>
      <summary>Path to dictionary</summary>
      <description>Path to file dictionary ang-pol</description>
    </key>
    <key name="dict-pwn-polang" type="s">
      <default>'/opt/gydict/data/polang.win'</default>
      <summary>Path to dictionary</summary>
      <description>Path to file dictionary pol-ang</description>
    </key>
    <key name="dict-depl-a" type="s">
      <default>'/opt/gydict/data/a.dat'</default>
      <summary>Path to dictionary</summary>
      <description>Path to file dictionary a.data</description>
    </key>
    <key name="dict-depl-b" type="s">
      <default>'/opt/gydict/data/b.dat'</default>
      <summary>Path to dictionary</summary>
      <description>Path to file dictionary b.data</description>
    </key>
  </schema>

  <schema id="org.gtk.gydict.fonts" path="/org/gtk/gydict/fonts/">
    <key name="use-system-fonts" type="b">
      <default>true</default>
      <summary>Use system fonts</summary>
      <description>Use the system default fonts.</description>
    </key>
    <key name="font-text" type="s">
      <default>'Cantarell 11'</default>
      <summary>Font for text.</summary>
      <description>A font for a widget text (GtkTextView).</description>
    </key>
    <key name="font-list" type="s">
      <default>'Cantarell 11'</default>
      <summary>Font for tree.</summary>
      <description>A font for a widget tree (GtkTreeView).</description>
    </key>
  </schema>

</schemalist>
