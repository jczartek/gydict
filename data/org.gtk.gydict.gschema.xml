<schemalist gettext-domain="gydict">

  <schema id="org.gtk.gydict" path="/org/gtk/gydict/">
    <key name="night-mode" type="b">
      <default>false</default>
      <summary>Night Mode</summary>
      <description>Prefer dark application chrome.</description>
    </key>

    <key name="show-grid-lines" type="b">
      <default>false</default>
      <summary>Show grid lines</summary>
      <description>If enabled, the the program will show grid lines under the text.</description>
    </key>

    <key name="font-name" type="s">
      <default>"Sans Reqular 12"</default>
    </key>

    <key name="dict-pwn-angpol" type="s">
      <default>""</default>
    </key>

    <key name="dict-pwn-polang" type="s">
      <default>""</default>
    </key>

    <key name="dict-depl-a" type="s">
      <default>""</default>
    </key>

    <key name="dict-depl-b" type="s">
      <default>""</default>
    </key>
  </schema>

</schemalist>
